<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="30"><!-- copied from site and done changes according to sir -->
 
    <!-- Logging Properties -->
    <Properties>
       
        <Property name="basePath">./logs</Property>
    </Properties>
     
    <Appenders>
     
        <!-- Console Appender -->
        <Console name="Console" target="SYSTEM_OUT" follow="true">
            <PatternLayout pattern="${LOG_PATTERN}"/>
        </Console>
         
        <!-- File Appenders on need basis -->
        <RollingFile name="file" fileName="${basePath}/automation.log"
            filePattern="${basePath}/automation.log-%d{yyyy-MM-dd}-%i.log">
            
            <PatternLayout pattern="%d{yyyy-MM-dd}-%i.log"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="10MB" />
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>
        
        </Appenders>
        
        
        <Loggers>
        <Root level="info">
         <AppenderRef ref="Console"/> 
           <!--  <AppenderRef ref="File"/>  -->
        </Root>
        
         </Loggers>
         
       </Configuration>  